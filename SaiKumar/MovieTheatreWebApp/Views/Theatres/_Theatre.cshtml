@model IEnumerable<MovieTheatreWebApp.Models.Theatre>

<h1>Theaters</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create Theater</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfSeat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfSeat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
               
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <button class="btn btn-danger"  value="@item.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
